  "version": "2.0.0",
  "tasks": [
    {
      "options": {
        "cwd": "${workspaceFolder}/clan.events.client"
      },
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "options": {
        "cwd": "${workspaceFolder}/clan.events.client"
      },
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "CosmosDB Emulator",
      "options": { "cwd": "C:/Program Files/Azure Cosmos DB Emulator" },
      "type": "shell",
      "command": "./CosmosDB.Emulator.exe /EnableMongoDBEndpoint=3.6"
    }
  ]
}
